<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/order_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:layout_marginStart="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/order_date_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Date"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/order_image"
        app:layout_constraintTop_toTopOf="@+id/order_image" />

    <TextView
        android:id="@+id/order_number_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:text="Order number"
        android:textSize="12sp"
        android:textStyle="italic"
        android:textColor="@android:color/holo_red_dark"
        app:layout_constraintStart_toEndOf="@+id/order_image"
        app:layout_constraintTop_toBottomOf="@+id/order_date_txt" />

    <TextView
        android:id="@+id/order_name_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:text="Name"
        android:textSize="12sp"
        android:textStyle="italic"
        android:textColor="@android:color/holo_red_dark"
        app:layout_constraintStart_toEndOf="@+id/order_image"
        app:layout_constraintTop_toBottomOf="@+id/order_number_txt" />

    <TextView
        android:id="@+id/order_status_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:text="Status"
        android:textSize="12sp"
        android:textStyle="italic"
        android:textColor="@android:color/holo_red_dark"
        app:layout_constraintStart_toEndOf="@+id/order_image"
        app:layout_constraintTop_toBottomOf="@+id/order_name_txt" />
</androidx.constraintlayout.widget.ConstraintLayout>